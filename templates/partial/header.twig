<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
<header class="header brand-bg-primary">
  {% block header %}
    <div class="container">
      <div class="row py-3">
        <div class="col-12 col-md-6">
          <h1 class="hdr-logo brand-text-primary" role="banner">
            <a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
          </h1>
          {% if site.description %}
            {{ site.description }}
          {% endif  %}
        </div>
        <div class="col-12 col-md-6 text-md-end">
          {% if header_cta_menu %}
            {% include "partial/header-inline-menu.twig" with { 'menu': header_cta_menu.get_items, 'menu_id': 'header-cta-menu' } %}
          {% endif %}
          {% if second_header_menu %}
            {% include "partial/header-inline-menu.twig" with { 'menu': second_header_menu.get_items, 'menu_id': 'second-header-menu' } %}
          {% endif %}
        </div>
      </div>
    </div>
    <nav id="nav-main" class="nav-main" role="navigation">
      <div class="container">
        {% include "partial/menu.twig" with { 'menu': primary_menu.get_items } %}
      </div>
    </nav><!-- #nav -->
  {% endblock %}
</header>
