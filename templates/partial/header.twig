<a class="visually-hidden-focusable" href="#content">{{ _e( 'Skip to content') }}</a>
<header class="header">
  {% block header %}
    <div class="container py-2">
      <div class="row py-3 justify-content-between align-items-center">
        <div class="col-9 col-md-4 col-lg-3">
          {% if site_logo %}
            <a class="hdr-logo-link" href="{{site.url}}" rel="home"><img class="img-fluid" src="{{ site_logo }}" alt="{{site.name}}"></a>
          {% else %}
            <h1 class="hdr-logo brand-text-primary" role="banner">
              <a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
            </h1>
          {% endif %}
          {% if site.description %}
            <p class="m-0">{{ site.description }}</p>
          {% endif  %}
        </div>
        <div class="d-block d-md-none col text-end">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <i class="display-4 fa fa-bars"></i>
          </button>
        </div>
        <div class="d-none d-md-block col-md-6 text-md-end">

          {% if header_ctas.0.button %}
            <a class="btn bg-body border-secondary rounded-none text-uppercase text-secondary mb-3" href="{{ header_ctas.0.button.url }}" target="{{ header_ctas.0.button.target ? '_blank' : '_self' }}">{{ header_ctas.0.button.title }}</a>
          {% endif %}

          {% if header_ctas.1.button %}
            <a class="btn btn-secondary rounded-none text-uppercase ms-2 mb-3" href="{{ header_ctas.1.button.url }}" target="{{ header_ctas.1.button.target ? '_blank' : '_self' }}">{{ header_ctas.1.button.title }}</a>
          {% endif %}

          {% if second_header_menu %}
            {% include "partial/header-inline-menu.twig" with { 'menu': second_header_menu.get_items, 'menu_id': 'second-header-menu' } %}
          {% endif %}

        </div>
      </div>
    </div>
    <nav id="nav-main" class="navbar p-0 bg-primary d-none d-lg-block" role="navigation">
      <div class="container">
        {% include "partial/menu.twig" with { 'menu': primary_menu.get_items } %}
      </div>
    </nav><!-- #nav -->
  {% endblock %}
</header>

	<nav class="collapse navbar-collapse d-lg-none" id="navbarSupportedContent">
		<ul>
      {% for item in second_header_menu.get_items|slice(0,3) %}
        <li class="text-decoration-none {% if not loop.last %}border-secondary border-end pe-2{% endif %} {{ item.classes | join(' ') }}">
          <a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
        </li>
      {% endfor %}
		</ul>
	</nav>
