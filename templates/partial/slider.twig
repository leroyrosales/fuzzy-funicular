<!-- Slider main container -->
<section class="swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        {% for slide in slider %}
            <style>
                .swiper-slide--{{loop.index}} {
                    background-image:url({{ Image(slide).src|resize(600, 'top') }});
                }
                @media screen and (min-width: 900px) {
                    .swiper-slide--{{loop.index}} {
                        background-image: url("{{ Image(slide).src|resize(1200, 514.29, 'top') }}");
                    }
                }
                @media screen and (min-width: 1200px) {
                    .swiper-slide--{{loop.index}} {
                        background-image: url("{{ Image(slide).src|resize(1600, 685.71, 'top') }}");
                    }
                }
            </style>
            <!-- Slides -->
            <div class="swiper-slide swiper-slide--{{loop.index}}">
                <div class="swiper-slide--img-overlay d-flex flex-column  justify-content-center">
                    <div class="p-5 ps-lg-5 ms-2 ms-lg-5">
                        <h2 class="card-title text-secondary">{{ slide.title }}</h2>
                        <p class="d-none d-md-block card-text lead fw-normal">{{ slide.text }}</p>
                        <a class="btn btn-lg btn-outline-secondary" href="{{ slide.cta.url }}">{{ slide.cta.title }}</a>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
    <!-- Pagination -->
    <div class="swiper-pagination"></div>

    <!-- Navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>

</section>