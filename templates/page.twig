{% extends "base.twig" %}

{% block content %}

	<div class="content-wrapper">
		<div class="container pt-3 pb-5">
			<div class="row">
				<div class="col-12 my-3 py-3">
					<h1 class="article-h1 pb-4 text-primary text-center border-bottom">{{post.title}}</h1>
				</div>
			</div>
			<section class="row article-content">
				{% if sidebar %}
					{% if default_template %}
						{% include "sidebar.twig" with { 'sidebar': sidebar } %}
					{% else %}
						{% include "sidebar.twig" with { 'sidebar': secondary_sidebar } %}
					{% endif %}
				{% endif %}
				<div class="col-12 col-md-8">
					<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
						<div class="article-body">
							{% include 'partial/flex-content.twig' %}
						</div>
					</article>
				</div>
			</section>
		</div>
	</div><!-- /content-wrapper -->

{% endblock %}
