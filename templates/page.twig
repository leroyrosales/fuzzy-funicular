{% extends "base.twig" %}

{% block content %}

	<div class="content-wrapper">
		<div class="container pt-3 pb-5">
			<div class="row">
				<div class="col-12 my-3 py-3">
					<h1 class="article-h1 pb-4 text-primary text-center border-bottom">{{post.title}}</h1>
				</div>
				{% if sidebar %}
					<div class="col-12 col-md-4">
						{% include "sidebar.twig" with { 'sidebar': sidebar } %}
					</div>
				{% endif %}
				<div class="col-12 col-md-8">
					<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
						<section class="article-content py-5">
							<div class="article-body">
								{% include 'partial/flex-content.twig' %}
							</div>
						</section>
					</article>
				</div>
			</div>
		</div>
	</div><!-- /content-wrapper -->

{% endblock %}
