{% if before_footer_section %}
  {% include 'partial/before-footer.twig' %}
{% endif %}

<footer class="footer">
  <div class="container pt-4 pb-5">
    <div class="row">
      <div class="col-12">
        {% if site_logo %}
          <img class="img-fluid" src="{{ site_logo }}" alt="{{site.name}}">
        {% else %}
          <h1 class="hdr-logo brand-text-primary" role="banner">
            <a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
          </h1>
        {% endif %}
        {% if site.description %}
          <p>{{ site.description }}</p>
        {% endif  %}
        <p>&copy; {{"now"|date('Y')}} <a href="{{ site.url }}" class="font-weight-bold">{{ site.name }}</a> All rights reserved.</p>
        {% if second_footer_menu %}
          {% include "partial/footer-inline-menu.twig" with { 'menu': second_footer_menu.get_items, 'menu_id': 'second-footer-menu' } %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>