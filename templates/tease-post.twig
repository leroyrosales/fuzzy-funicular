{% extends "tease.twig" %}

{% block content %}
	<article class="row" >
		<div class="col-7">
			<h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
			<p>{{ post.preview.length(25).read_more('(continue reading...)') }}</p>
		</div>
		{% if post.thumbnail.src %}
			<div class="col">
				<img class="img-fluid" src="{{post.thumbnail.src}}" />
			</div>
		{% endif %}
	</article>
{% endblock %}