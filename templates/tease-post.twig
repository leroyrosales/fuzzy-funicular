{% extends "tease.twig" %}

{% block content %}
	<article>
		<h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
		<p>{{ post.preview.length(25).read_more('(continue reading...)') }}</p>
		{% if post.thumbnail.src %}
			<img src="{{post.thumbnail.src}}" />
		{% endif %}
	</article>
{% endblock %}